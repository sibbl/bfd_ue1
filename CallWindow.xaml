<Window x:Class="VoIP.CallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calling..."
        Height="400"
        Width="200"
        MinWidth="400"
        MinHeight="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="CallingTextBlock" Grid.Row="0">
            <Run Text="Calling "/><Run x:Name="PhoneNumberTextBlock" /><Run Text="..."></Run>
        </TextBlock>
        <Button
            Grid.Row="1"
            x:Name="HangUpButton"
            Content="_Hang up"
            Click="OnHangUpCall"
            />
    </Grid>
</Window>
